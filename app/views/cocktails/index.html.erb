<h1>Cocktails</h1>

<%= simple_form_for @cocktail, html: {class: "form-inline"} do |f| %>
  <%= f.input :name, class: "form-control" %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
  <% end %>
</ul>
